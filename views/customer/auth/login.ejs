<%- include("../../shared/includes/head", { title: "Signup" }) %> 
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Login</h1>
        <% if (sessionInputData.hasError) { %> 
            <div class="error-message">
                <h3><%= sessionInputData.title %></h3>
                <p><%= sessionInputData.message %></p>
            </div>
        <% } %>         
        <form class="auth-forms" action="/login" method="POST">     
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">       
            <div>
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= sessionInputData.email %>" required>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="6" value="<%= sessionInputData.password %>" required>
            </div>      
            <div class="form-btns">
                <button class="btn">Login</button>
                <div id="switch-form"><a href="/signup">Create a new user</a></div>
            </div>       
        </form>
    </main>
<%- include("../../shared/includes/footer") %>