<ul>
    <% if (!locals.isAdmin) { %>
        <li class="nav-item"><a href="/">Shop</a></li>
        <li class="nav-item"><a href="/cart">Cart <span class="badge"><%= locals.cart.totalQuantity %></span></a></li>
    <% } %>             

    <% if (locals.isAuth && !locals.isAuth) { %>
        <li class="nav-item"><a href="/orders">Orders</a></li>
    <% } %> 

    <% if (locals.isAdmin) { %>
        <li class="nav-item"><a href="/admin/products">Manage Products</a></li>
        <li class="nav-item"><a href="/admin/orders">Manage Orders</a></li>            
    <% } %> 

    <% if (!locals.isAuth) { %>
    <li class="nav-item"><a href="/signup">Signup</a></li>
    <li class="nav-item"><a href="/login">Login</a></li>            
    <% } %> 

    <% if (locals.isAuth) { %>
        <li class="nav-item">
            <form action="/logout" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" >
                <button>Logout</button>
            </form>
        </li>
    <% } %>                         
</ul>